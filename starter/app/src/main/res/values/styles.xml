<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="textAppearanceHeadline5">@style/CustomTextAppearanceHeadline5</item>
        <item name="textAppearanceHeadline6">@style/CustomTextAppearanceHeadline6</item>
    </style>

    <style name="CustomTextAppearanceHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTextAppearanceHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
    </style>


    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Title.Subtitle" parent="TextAppearance.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
